# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/grievance_db

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-in-production

# JWT Configuration (for custom auth if needed)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Docker Compose Variables (for production)
POSTGRES_DB=grievance_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password

# Environment
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000

# Default password for seeded users (development only)
DEFAULT_USER_PASSWORD=password123

# Optional: External Services
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: File Upload
# UPLOAD_MAX_SIZE=10485760
# UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Optional: Redis (for caching)
# REDIS_URL=redis://localhost:6379